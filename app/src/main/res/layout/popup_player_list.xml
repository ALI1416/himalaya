<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_player_list_bg"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        >

        <ImageView
            android:id="@+id/popup_switch_play_mode_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/selector_player_mode_list"
            />

        <TextView
            android:id="@+id/popup_switch_play_mode_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="顺序播放"
            android:textSize="20sp"
            />

        <ImageView
            android:id="@+id/popup_switch_play_order_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/selector_player_list_desc"
            />

        <TextView
            android:id="@+id/popup_switch_play_order_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="倒序"
            android:textSize="20sp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorMain"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/player_list_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorMain"
        />

    <TextView
        android:id="@+id/player_list_close"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="关闭"
        android:textSize="20sp"
        />
</LinearLayout>